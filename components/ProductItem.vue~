<template>
  <div
      :class="{ selected: isSelected }"
      class="product-item"
      @click="toggleSelect"
  >
    <div class="image-container">
      <img :alt="product.product_name" :src="productImageUrl" />
    </div>
    <hr class="separator" />
    <p class="product-name">{{ product.product_name }}</p>

    <!-- Tampilkan rating, harga, diskon, dan jumlah terjual hanya di halaman SHOP APPARELS -->
    <div
        v-if="isShopApparels"
        class="product-details">
      <div class="rating">
        <span class="stars">★★★★☆</span>
        <span class="rating-count">(654)</span> <!-- Contoh Rating -->
      </div>
      <div class="price">
        <span class="discount-price">$11.00</span> <!-- Harga Diskon -->
        <span class="original-price">$25.00</span> <!-- Harga Awal -->
      </div>
    </div>
  </div>
</template>

<script setup>
import {ref, watch} from 'vue';

const props = defineProps({
  product: Object,
  isSelected: Boolean,
  isShopApparels: Boolean // Prop untuk mengecek apakah ini halaman SHOP APPARELS
});

const emit = defineEmits(['toggle-select']);

const toggleSelect = () => {
  emit('toggle-select');
};

// Mengambil product_picture dan memastikan format base64 atau default image
const productImageUrl = ref(
    props.product.product_picture
        ? `data:image/png;base64,${props.product.product_picture}`
        : '/path/to/default/image.png'
);

// Update gambar jika field product_picture berubah
watch(() => props.product.product_picture, (newVal) => {
  productImageUrl.value = newVal
      ? `data:image/png;base64,${newVal}`
      : '/path/to/default/image.png';
});
</script>

