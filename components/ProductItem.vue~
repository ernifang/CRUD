  display: flex; /* Menambahkan flex display */
  align-items: center; /* Menjaga teks tetap sejajar di tengah secara vertikal */
  justify-content: center; /* Menjaga teks tetap sejajar di tengah secara horizontal */
  text-align: center; /* Pastikan teks berada di tengah */
